{
  "compilerOptions": {
    "target": "ES2020",
    "resolveJsonModule": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
     "@common/*": ["common/*"],
      "@utils/*": ["utils/*"],
      "@product/*": ["product/*"],
      "@user/*": ["user/*"],
    }
  },
  "include": [
    "src/swagger-output.json",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
